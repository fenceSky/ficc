<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
    <class name="model.Activity" table="activity" catalog="ficc">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="title" type="java.lang.String">
            <column name="title" length="200" />
        </property>
        <property name="startTime" type="java.sql.Timestamp">
            <column name="start_time" length="19" />
        </property>
        <property name="lastTime" type="java.lang.Integer">
            <column name="last_time" />
        </property>
        <property name="province" type="java.lang.String">
            <column name="province" length="50" />
        </property>
        <property name="city" type="java.lang.String">
            <column name="city" length="50" />
        </property>
        <property name="shortAddr" type="java.lang.String">
            <column name="short_addr" length="100" />
        </property>
        <property name="detailAddr" type="java.lang.String">
            <column name="detail_addr" length="300" />
        </property>
        <property name="publisherId" type="java.lang.Integer">
            <column name="publisher_id" />
        </property>
        <property name="totalPeople" type="java.lang.Integer">
            <column name="total_people" />
        </property>
        <property name="fee" type="java.lang.Integer">
            <column name="fee" />
        </property>
        <property name="content" type="java.lang.String">
            <column name="content" length="65535" />
        </property>
        <property name="state" type="java.lang.Integer">
            <column name="state" />
        </property>
        <property name="publishTime" type="java.sql.Timestamp">
            <column name="publish_time" length="19" />
        </property>
    </class>
</hibernate-mapping>

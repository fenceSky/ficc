<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.Comment" table="comment" catalog="ficc">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="activityId" type="java.lang.Integer">
            <column name="activity_id" />
        </property>
        <property name="userId" type="java.lang.Integer">
            <column name="user_id" />
        </property>
        <property name="title" type="java.lang.String">
            <column name="title" length="100" />
        </property>
        <property name="content" type="java.lang.String">
            <column name="content" length="65535" />
        </property>
        <property name="ctime" type="java.sql.Timestamp">
            <column name="ctime" length="19" />
        </property>
        <property name="state" type="java.lang.Integer">
            <column name="state" />
        </property>
        <property name="username" type="java.lang.String">
            <column name="username" length="100" />
        </property>
        <property name="userheadimg" type="java.lang.String">
            <column name="userheadimg" length="200" />
        </property>
    </class>
</hibernate-mapping>
